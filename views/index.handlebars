<div class="header font">
    <h1>Eat-Da-Burger!</h1>
    <img src="\assets\img\clipart2551201.png" width="300" alt="Da Burger!">
</div>

<div class="row">
    <div class="col-md-6 order font">
        <h2>Burgers Ready to Devour!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="burger-li pb-2">
                {{burger_name}}
                <button class="btn btn-danger bugerBtn devouredId" burger-id="{{id}}" type="button">Devour it!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6 order font">
        <h2>Devoured Burgers!</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li class="burger-li pb-2">
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-12 order font">
        <h2>Order-Da-Burger!</h2>
        <form id="create-form">

            <div class="form-group">
                <label for="burger">What Burger do you want to eat?</label>
                <input type="text" id="burgerInput" name="name">
            </div>

            <button class="btn btn-danger" type="submit" id="createBurgerBtn">Order DA Burger!</button>
        </form>
    </div>