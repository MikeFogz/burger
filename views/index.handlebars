<div class="header">
    <h1>Eat-Da-Burger!</h1>
    <img src="https://www.popsci.com/resizer/WIkGnJWeiuJYMKqhARD8L42g9gg=/1034x775/arc-anglerfish-arc2-prod-bonnier.s3.amazonaws.com/public/QDAYJRT4D5BFNNI72QBPU73BDQ.jpg"
        width="300" alt="Da Burger!">
</div>

<div class="row">
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="burger-li pb-2">
                {{burger_name}}
                <button class="btn btn-primary bugerBtn devouredId" burger-id="{{id}}" type="button">Devour it!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li class="burger-li pb-2">
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>


    <h2>Order DA Burger</h2>
    <form id="create-form">

        <div class="form-group">
            <label for="burger">What Burger do you want to eat?</label>
            <input type="text" id="burgerInput" name="name">
        </div>

        <button type="submit" id="createBurgerBtn">Order DA Burger!</button>
    </form>